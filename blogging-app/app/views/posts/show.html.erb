<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render 'nav' %>
    </div>
    <div class="col-md-8">
      <h3><%= @post.title %></h3>
      <p class="lead">
        by <%= @post.author.full_name %>
      </p>
      <hr>
      <p>
        <span class="glyphicon glyphicon-time"></span>
        Posted on <%= @post.created_at.strftime("%b %d, %Y") %>
        <% if @post.updated_at != @post.created_at %>
          <small>Edited at <%= @post.updated_at.strftime("%b %d, %Y") %></small>
        <% end %>
      </p>
      <%= image_tag attachment_url(@post, :photo, :fill, 400, 150, format: "jpg"), style:"max-width: 100%; min-width: 100%; border: 1px solid #777777;"%>
      <hr>
      <div class="post">
        <p class="lead"><%= @post.summary %></p>
        <p><%= @post.post %></p>
      </div>
      <hr>
      <nav>
        <%= link_to "Edit", edit_post_path(id: @post.id), class: "btn btn-default" %>
        <%= link_to post_path(id: @post.id), method: :delete, data: {confirm: "Are you sure you want to delete?"}, class: "btn btn-default" do %>
          <i class='fa fa-trash', style="color: red;"></i>
        <% end %>
      </nav>
      <hr>
      <br>
    </div>
  </div>
</div>
