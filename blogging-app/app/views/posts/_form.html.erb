<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |error| %>
    <p class="alert alert-danger"><strong><%= error %></strong></p>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_area :summary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :post %>
    <%= f.text_area :post, size: "60x12", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :author %>
    <%= f.collection_select :author_id, Author.all, :id, :full_name, {prompt: true},  {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.attachment_field :photo %>
    <% if @post.errors[:photo].any? %>
      <span class="mdl-textfield__error">* <%= @post.errors[:photo].join(", ") %> </span>
    <% end %>
    <%= f.label :photo, class: "" %>
  </div>

  <div class="">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
