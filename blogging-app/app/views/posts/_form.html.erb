<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |error| %>
    <p class="alert alert-danger"><strong><%= error %></strong></p>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_area :summary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :post %>
    <%= f.text_area :post, size: "60x12", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :author %>
    <%= f.collection_select :author_id, Author.all, :id, :full_name, {prompt: true},  {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label "Photo" %>
    <br>
    <em>**<%= "Check back later for upgrades and the ability to add/update photos" %></em>
  </div>

  <div class="">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
